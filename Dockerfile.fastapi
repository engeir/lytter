FROM python:3.12-slim

# Install uv.
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# Copy pyproject.toml, README, and package structure
COPY pyproject.toml uv.lock README.md ./
COPY src/ src/
WORKDIR /app
RUN uv sync --frozen --no-cache

# Create directories
RUN mkdir -p /app/data /app/src/lytter/static

EXPOSE 8000

# Run the application with healthcheck-friendly settings
CMD ["uv", "run", "uvicorn", "lytter.app:app", "--host", "0.0.0.0", "--port", "8000"]
